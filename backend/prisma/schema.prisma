generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

enum StatusUrgencia {
    URGENTE
    MODERADO
    BAIXO
}

enum StatusAtendimento {
    AGENDADO
    CONFIRMADO
    CANCELADO
    FINALIZADO
}

enum Role {
    MEDICO
    ATENDENTE
    ADMIN
}

model Agenda {
    id            String   @id @default(uuid())
    horario_atend DateTime

    statusUrgencia StatusUrgencia    @default(BAIXO)
    status         StatusAtendimento @default(AGENDADO)

    pantId Int
    docId  Int

    paciente Patient @relation(fields: [pantId], references: [id])
    medico   Doctor   @relation(fields: [docId], references: [userId])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("agendas")
}

model Users {
    id           Int      @id @default(autoincrement())
    nome         String   @db.VarChar(100)
    cpf          String   @unique @db.VarChar(11)
    nascimento   DateTime
    fone         String   @db.VarChar(11)
    email        String   @unique
    passwordHash String   @map("password") @db.VarChar(60)

    role Role

    medico    Doctor?
    atendente Attend?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model Doctor {
    userId        Int    @id
    crm           String @unique
    especialidade String

    user Users @relation(fields: [userId], references: [id])

    agendas Agenda[]

    @@map("doctors")
}

model Patient {
    id         Int      @id @default(autoincrement())
    nome       String
    cpf        String   @unique
    nascimento DateTime
    fone       String
    email      String?
    cartaoSus  String   @unique

    agendas Agenda[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Attend {
    userId Int    @id
    setor  String

    user Users @relation(fields: [userId], references: [id])

    @@map("attends")
}
